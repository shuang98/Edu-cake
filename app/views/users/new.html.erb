<style>
	body {
		background-color: #A0CAEE;
	}
</style>
<% if !current_user %>
<div class = "container"></div>
<div class = "header">
	<div class = "header-text">Become a member!</div>
</div>
<% if @user.errors.any? %>
	<div class="alert alert-danger">
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<%= form_for @user, url: users_path do |f|%>
	<div class = "description">Username (minimum of 5 characters)</div>
	<div class = "inputbox">
		<%= f.text_field :username, :size=>"20", placeholder: "ex: stanleyhuang", class: "form-control"%>
	</div>
  	<div class = "description">Email</div>
  	<div class = "inputbox">
  		<%= f.text_field :email, placeholder: "ex: stanleyhuang@gmail.com", class: "form-control" %>
  	</div>
  	<div class = "description">Password(6 - 20 characters)</div>
  	<div class = "inputbox">
  		<%= f.password_field :password, class: "form-control" %> 
  	</div>
  	<div class = "description">Password Confirmation</div>
  	<div class = "inputbox">
  		<%= f.password_field :password_confirmation, class: "form-control" %>
  	</div>
  	<div class = "description">
  		<%= f.submit "Submit" , class: "btn btn-primary"%>
  	</div>
  	<div class = "description">
  		<%= link_to 'Already have an account? Login here.', login_path %>
  	</div>
<% end %>
</div>
</center>

<% else %>
	<h2>You are already logged in</h2>
 	<%= link_to 'Click here to back to to courses', courses_path %>
<% end %>